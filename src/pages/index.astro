---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Frontend Mentor | QR code component">
	<main>
		<div
			class="bg-[#D7E1ED] min-w-full w-full min-h-screen h-screen overflow-hidden"
		>
			<div class="flex flex-row h-full justify-center items-center">
				<div
					class="bg-white rounded-lg flex flex-col w-2/3 sm:w-2/5 md:w-1/3 lg:w-1/4 xl:w-1/5 2xl:w-2/12 p-5 gap-3 justify-center items-center"
				>
					<img src="../images/image-qr-code.png" class="rounded-lg w-full" />
					<h2 class="font-bold w-full text-center">
						Improve your front-end skills by building projects
					</h2>
					<p class="text-center text-sm text-gray-500">
						Scan the QR code to visit Frontend Mentor and take your coding
						skills to the next level
					</p>
				</div>
			</div>
			<div
				class="fixed left-0 bottom-0 flex flex-col items-center justify-center w-full text-xs sm:flex-row mb-3 gap-1"
			>
				<div>
					Challenge by
					<a
						href="https://www.frontendmentor.io?ref=challenge"
						target="_blank"
						class="ml-1 text-blue-500 underline"
					>
						Frontend Mentor
					</a>.
				</div>
				<div>
					Coded by
					<a
						href="https://github.com/ratnadeep007/"
						target="_blank"
						class="ml-1 text-blue-500 underline"
					>
						Ratnadeep Bhattacharyya
					</a>.
				</div>
			</div>
		</div>
	</main>
</Layout>
